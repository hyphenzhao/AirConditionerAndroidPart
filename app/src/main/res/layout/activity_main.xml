<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hyphen.airconditioner.MainActivity">

    <GridLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layout1"
        android:textAlignment="center">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="△"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/button1_1"
            android:textSize="30sp" />
        <TextView
            android:text="温度:\n--℃"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/textView1"
            android:textSize="30sp"
            android:textAlignment="center" />
        <Button
            android:text="▽"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:id="@+id/button1_2"
            android:textSize="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="△"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/button2_1"
            android:textSize="30sp" />
        <TextView
            android:text="湿度:\n--%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/textView2"
            android:textSize="30sp"
            android:textAlignment="center" />
        <Button
            android:text="▽"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/button2_2"
            android:textSize="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="△"
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/button3_1"
            android:textSize="30sp" />
        <TextView
            android:text="风速:\n--"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:id="@+id/textView3"
            android:textSize="30sp"
            android:textAlignment="center" />
        <Button
            android:text="▽"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:id="@+id/button3_2"
            android:textSize="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="△"
            android:layout_row="3"
            android:layout_column="0"
            android:id="@+id/button4_1"
            android:textSize="30sp" />
        <TextView
            android:text="定时:\n--"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:id="@+id/textView4"
            android:textSize="30sp"
            android:textAlignment="center" />
        <Button
            android:text="▽"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:id="@+id/button4_2"
            android:textSize="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="△"
            android:layout_row="3"
            android:layout_column="1"
            android:id="@+id/button5_1"
            android:textSize="30sp" />
        <TextView
            android:text="模式:\n--"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:id="@+id/textView5"
            android:textSize="30sp"
            android:textAlignment="center" />
        <Button
            android:text="▽"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:id="@+id/button5_2"
            android:textSize="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电源"
            android:layout_row="4"
            android:layout_column="2"
            android:id="@+id/power"
            android:textSize="30sp"
            android:textColor="#FF0000"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能升温"
            android:layout_row="5"
            android:layout_column="2"
            android:id="@+id/smart"
            android:textSize="18sp" />

    </GridLayout>
</RelativeLayout>
